<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/lec_ins_back_2">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HOD.underGraduateLectureHOD"
    android:orientation="vertical"
    android:padding="15dp"
    tools:ignore="LabelFor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        >
        <ProgressBar android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="?android:attr/progressBarStyle"
            android:visibility="gone"
            android:layout_gravity="end"
            android:id="@+id/progressBarUGHOD"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee ID"
            android:textColor="#430101"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/lec_hodID_ug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="21sp"
            android:textColor="#430101"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher's Name"
            android:textColor="#430101"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/lec_hodName_ug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="21sp"
            android:textColor="#430101"
            />
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="6"
            android:id="@+id/gridLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="Department:"
                android:id="@+id/dept"
                android:textColor="#430101"/>

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/department"
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="Semester:"
                android:textColor="#430101"/>

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/semUG"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" />

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:text="Sub Code/Name:"
            android:textColor="#430101"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/subCodeName"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />



        <!--            <TextView-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:id="@+id/subject"-->
        <!--                android:layout_marginTop="10dp"-->
        <!--                android:textSize="19sp"-->
        <!--                android:textColor="#000000"-->
        <!--                android:textStyle="bold"-->
        <!--                />-->
        <Button
            android:id="@+id/generate"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Generate QRcode"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounded"
            android:textColor="#ffffff"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/qrCode"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>