<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentHome.ParentProfileActivity"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parent Details"
        android:textStyle="italic"
        android:textSize="28sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/profile_parentName"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="19sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/profile_parentEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="19sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/profile_parentPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="19sp"
        android:textColor="#000000"
        />

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Details:"
        android:textStyle="italic"
        android:textSize="28sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/profile_parent_sName"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="19sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/profile_parent_sEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="19sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/profile_parent_sPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="19sp"
        android:textColor="#000000"
        />

    <TextView
        android:gravity="center"
        android:layout_marginTop="310dp"
        android:id="@+id/profile_parent_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="#FF0000"
        />

</LinearLayout>