<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Student.MarkAttendanceActivity"
        android:padding="20dp"
    >

    <ProgressBar
    android:id="@+id/progressBarAttendance"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="#000000"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/mark_s_name"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:textAllCaps="true"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UID: "
                android:textColor="#000000"
                android:textSize="18sp"
                android:textAllCaps="true"
                />
        <TextView
            android:id="@+id/mark_s_uid"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:textAllCaps="true"
            />
        </LinearLayout>
    </LinearLayout>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College: "
            android:textColor="#000000"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/mark_s_college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department: "
            android:textColor="#000000"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/mark_s_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:textAllCaps="true"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: "
            android:textColor="#000000"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/mark_s_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:textAllCaps="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester: "
            android:textColor="#000000"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/mark_s_sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:textAllCaps="true"
            />
    </LinearLayout>

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Scan"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:id="@+id/scan"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
           android:background="@drawable/button_rounded"
            />

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lecture Details:"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/attenDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            />


        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Mark"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:id="@+id/done"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded"
            android:textColor="#ffffff"
            />

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="*Note: If your location is off app might get crash"-->
<!--            android:textColor="#ff0000"-->
<!--            android:layout_marginTop="40dp"-->
<!--            android:gravity="center"-->
<!--            android:textSize="14sp"-->
<!--            />-->

    </LinearLayout>
</ScrollView>