                android:layout_marginTop="15dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year:"
                    android:textSize="20sp"
                    android:textColor="#000000"

                    />
                <RadioGroup
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="31dp"
                    >

                    <RadioButton
                        android:id="@+id/fyjc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FYJC"
                        android:layout_marginLeft="10dp"
                        android:onClick="checkButtonYear"/>

                    <RadioButton
                        android:id="@+id/syjc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SYJC"
                        android:layout_marginLeft="10dp"
                        android:onClick="checkButtonYear"
                        />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Division:"
                    android:textSize="20sp"
                    android:textColor="#000000"

                    />
                <RadioGroup
                    android:id="@+id/div"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    >

                    <RadioButton
                        android:id="@+id/a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:layout_marginLeft="0dp"
                        android:onClick="checkButtonDivision"/>

                    <RadioButton
                        android:id="@+id/b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:layout_marginLeft="10dp"
                        android:onClick="checkButtonDivision"
                        />

                    <RadioButton
                        android:id="@+id/c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:layout_marginLeft="10dp"
                        android:onClick="checkButtonDivision"/>

                    <RadioButton
                        android:id="@+id/d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:layout_marginLeft="10dp"
                        android:onClick="checkButtonDivision"
                        />

                </RadioGroup>

            </LinearLayout>


