            android:background="#6E9EEC"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/department"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year:"
                android:textSize="20sp"
                android:textColor="#000000"

                />
            <RadioGroup
                android:id="@+id/yearUG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                >

                <RadioButton
                    android:id="@+id/fy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FY"
                    android:layout_marginLeft="10dp"
                    android:onClick="checkButtonUGYear"/>

                <RadioButton
                    android:id="@+id/sy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SY"
                    android:layout_marginLeft="10dp"
                    android:onClick="checkButtonUGYear"
                    />
                <RadioButton
                    android:id="@+id/ty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TY"
                    android:layout_marginLeft="10dp"
                    android:onClick="checkButtonUGYear"
                    />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester:"
                android:textSize="20sp"
                android:textColor="#000000"

                />
            <RadioGroup
                android:id="@+id/semUG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <RadioButton
                    android:id="@+id/sem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem1"
                    android:layout_marginLeft="10dp"
                    android:onClick="checkButtonUGSem"/>

                <RadioButton
                    android:id="@+id/sem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem2"
                    android:layout_marginLeft="10dp"
                    android:onClick="checkButtonUGSem"
                    />
                <RadioButton
                    android:id="@+id/sem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem3"
                    android:layout_marginLeft="10dp"
                    android:onClick="checkButtonUGSem"
                    />

                <RadioButton
                    android:id="@+id/sem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem4"
                    android:layout_marginLeft="10dp"
                    android:onClick="checkButtonUGSem"/>

                <RadioButton
                    android:id="@+id/sem5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem5"
                    android:layout_marginLeft="10dp"
                    android:onClick="checkButtonUGSem"
                    />
                <RadioButton
                    android:id="@+id/sem6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem6"
                    android:layout_marginLeft="10dp"
                    android:onClick="checkButtonUGSem"
                    />

            </RadioGroup>
        </LinearLayout>

